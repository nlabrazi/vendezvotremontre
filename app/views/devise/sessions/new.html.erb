<div class="container">
  <div data-aos="fade-up" data-aos-duration="2000" class="content">
    <span class="login">Connexion</span>
    <div id="login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="login-button-form">
        <%= f.button :submit, "Se connecter", class:"btn-flat" %>
      </div>
      <% end %>
      <div class="or">ou connectez-vous via</div>
      <div class="flex-c-m social-connector">
        <% unless current_user %>
        <% else %>
        <%= link_to "Se dÃ©connecter", destroy_user_session_path, method: :delete %>
        <% end %>
        <a href="#" class="login-social-item bg1">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="login-social-item bg2">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="login-social-item bg3">
          <i class="fab fa-google"></i>
        </a>
      </div>
      <div class="forgot">
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
